{
    "editor.matchBrackets": "always",
    "editor.minimap.enabled": false,
    "editor.fontFamily": "MonoLisa,  mononoki NF,  Consolas, 'Courier New', monospace",
    "editor.fontSize": 13.5,
    "terminal.integrated.fontSize": 13.5,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.fontLigatures": true,
    "workbench.tree.indent": 20,
    "haskell.manageHLS": "GHCup",
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": true,
        "haskell": false,
        "scala": true
    },
    "editor.inlineSuggest.enabled": true,
    "terminal.external.windowsExec": "C:\\\\Users\\\\wbermeo\\\\AppData\\\\Local\\\\Microsoft\\\\WindowsApps\\\\wt.exe",
    "editor.largeFileOptimizations": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.lineNumbers": "relative",
    "editor.fastScrollSensitivity": 10,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.cursorSmoothCaretAnimation": true,
    "diffEditor.codeLens": true,
    "terminal.integrated.cursorBlinking": true,
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
